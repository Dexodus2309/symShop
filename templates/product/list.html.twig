{% extends 'base.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}
<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }
</style>

<div class="example-wrapper">
    <h1>Products(<a href="{{ path('createProduct') }}">Create new</a>)</h1>

    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        {%   for product in products %}
            <tr>
                <td>{{ product.getName() }}</td>
                <td>{{ product.getPrice() }}</td>
                <td>
                    <a href="{{ path('editProduct', {'id': product.getId()}) }}">Edit</a>
                    <a href="{{ path('removeProduct', {'id': product.getId()}) }}">Remove</a>
                </td>
            </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
