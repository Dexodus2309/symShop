{% extends 'base.html.twig' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}
<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }
</style>

<div class="example-wrapper">
    <h1>Orders(<a href="{{ path('createOrder') }}">Create new</a>)</h1>

    <table>
        <tr>
            <th>Status</th>
            <th>User Id</th>
            <th>Created date</th>
            <th>Actions</th>
        </tr>
        {%   for order in orders %}
            <tr>
                <td>{{ order.getStatus() }}</td>
                <td>{{ order.getUserId().getId() }}</td>
                <td>{{ order.getCreatedDate().date }}</td>
                <td>
                    <a href="{{ path('editOrder', {'id': order.getId()}) }}">Edit</a>
                    <a href="{{ path('removeOrder', {'id': order.getId()}) }}">Remove</a>
                </td>
            </tr>
        {% endfor %}

    </table>
</div>
{% endblock %}
